<div class="col-sm-12">
  <div class="update-profile col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <h1>Add new post</h1>
    <%= simple_form_for @post do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.submit 'Post' %>
    <% end %>
  </div>
</div>