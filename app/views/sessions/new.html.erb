<div class="col-sm-12">
  <div class="update-profile col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">   
    <h1>Log In</h1>

    <%= simple_form_for :session do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>

      <%= f.button :submit, "Log In" %>
      <%= link_to "Forgot password?", new_password_reset_path %>
    <% end %>

    <p>New User? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>