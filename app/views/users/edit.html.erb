<div class="col-sm-12">
  <div class="update-profile col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <h1>Update Profile</h1>

    <%= simple_form_for @user do |f| %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password, label: "New password" %>
      <%= f.input :password_confirmation, label: "Confirm new password" %>

      <%= f.button :submit, "Save Changes" %>
    <% end %>

    <p><%= link_to "Cancle editing", user_path %></p>
  </div>
</div>