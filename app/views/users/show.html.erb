<div class="col-sm-12">
  <div class="user-details col-md-4">
    <h2><%= @user.name %></h2>
    <h3><%= @user.email %></h3>
  </div>

  <div class="user-posts col-md-8">
    <% if @user.posts.any? %>
      <h3>Post (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @user.posts %>
      </ol>
    <% else %>
      <p class="no-post">This user haven't posted yet.</p>
    <% end %>
  </div>
</div>